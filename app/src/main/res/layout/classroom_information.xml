<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="370dp"
    android:layout_height="480dp"
    android:paddingVertical="20dp"
    android:paddingHorizontal="20dp"
    android:background="@drawable/classroom_border_bottom">

    <TextView
        android:id="@+id/roomNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nanumsquareroundextrabold"
        android:textColor="@color/black"
        android:text="(강의실)"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="60dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/backdoorImage"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_classroom_backdoor_existed" />

            <TextView
                android:id="@+id/backdoorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뒷문이 OO요"
                android:fontFamily="@font/nanumsquareroundextrabold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/plugImage"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_classroom_plug_absence"/>

            <TextView
                android:id="@+id/plugText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="콘센트가 OO요"
                android:fontFamily="@font/nanumsquareroundextrabold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="60dp">

            <ImageView
                android:id="@+id/kindImage"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_classroom_stair"/>

            <TextView
                android:id="@+id/kindText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계단강의실이에요"
                android:fontFamily="@font/nanumsquareroundbold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="10dp">

            <Button
                android:id="@+id/timeTableLinkBtn"
                android:layout_width="94dp"
                android:layout_height="104dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_classroom_timetable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강의시간표 보기"
                android:fontFamily="@font/nanumsquareroundbold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>